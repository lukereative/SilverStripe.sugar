<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<language id="com.lukereative.ss">
		<name>SilverStripe</name>
		<root-zone>language-root.html.with-ss</root-zone>
		
		 <detectors>
		     <extension>ss</extension>
		     <combo>
